<Page x:Class="ManagementEmployee.View.Admin.PayrollManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="950" d:DesignWidth="1100"
      Title="PayrollManagerPage">

    <Page.Resources>
        <!-- Card tối -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="#14163A"/>
        </Style>

        <!-- Ô nhập tối -->
        <Style x:Key="DarkBox" TargetType="Control">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Foreground" Value="#EDEBFF"/>
            <Setter Property="BorderBrush" Value="#3A3D7A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style x:Key="DarkTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkBox}">
            <Setter Property="Background" Value="#1E204D"/>
        </Style>
        <Style x:Key="DarkCombo" TargetType="ComboBox" BasedOn="{StaticResource DarkBox}">
            <Setter Property="Background" Value="#1E204D"/>
        </Style>
        <Style x:Key="DarkDatePicker" TargetType="DatePicker" BasedOn="{StaticResource DarkBox}">
            <Setter Property="Background" Value="#1E204D"/>
        </Style>

        <!-- Nút tròn -->
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Background" Value="#5fe7c4"/>
            <Setter Property="Foreground" Value="#0F1024"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid tối -->
        <Style x:Key="GridDark" TargetType="DataGrid">
            <Setter Property="Background" Value="#14163A"/>
            <Setter Property="Foreground" Value="#EDEBFF"/>
            <Setter Property="RowBackground" Value="#1B1E49"/>
            <Setter Property="AlternatingRowBackground" Value="#20245A"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="RowHeight" Value="34"/>
            <Setter Property="ColumnHeaderHeight" Value="38"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2A2D5F"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#2A2D5F"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>
    </Page.Resources>

    <Grid Background="#0F1024" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header + Filter -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <TextBlock Text="💳 Payroll Manager" Foreground="White" FontSize="18" FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox Width="220" Style="{StaticResource DarkTextBox}" Margin="8,0,0,0"
                         ToolTip="Search by name/position"
                         Text="{Binding FilterName, UpdateSourceTrigger=PropertyChanged}"/>
                <ComboBox Width="180" Style="{StaticResource DarkCombo}" Margin="8,0,0,0"
                          ItemsSource="{Binding DeptOptions}"
                          SelectedItem="{Binding FilterDept}"/>
                <ComboBox Width="100" Style="{StaticResource DarkCombo}" Margin="8,0,0,0"
                          ItemsSource="{Binding YearOptions}"
                          SelectedItem="{Binding FilterYear}"/>
                <ComboBox Width="100" Style="{StaticResource DarkCombo}" Margin="8,0,0,0"
                          ItemsSource="{Binding MonthOptions}"
                          SelectedItem="{Binding FilterMonth}"/>
                <Button Content="🔍 Search" Style="{StaticResource PillButton}" Margin="8,0,0,0"
                        Command="{Binding SearchCommand}"/>
                <Button Content="🔄 Refresh" Style="{StaticResource PillButton}" Margin="8,0,0,0"
                        Command="{Binding RefreshCommand}"/>
            </StackPanel>
        </DockPanel>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <!-- PAYROLL LIST -->
            <Border Style="{StaticResource Card}" Grid.Column="0" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Payrolls" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <DataGrid Grid.Row="1"
                              Style="{StaticResource GridDark}" AutoGenerateColumns="False"
                              ItemsSource="{Binding Payrolls}"
                              SelectedItem="{Binding SelectedPayroll}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PayrollId}" Width="60"/>
                            <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="2*"/>
                            <DataGridTextColumn Header="Dept" Binding="{Binding DepartmentName}" Width="1.5*"/>
                            <DataGridTextColumn Header="Period" Binding="{Binding PeriodText}" Width="1*"/>
                            <DataGridTextColumn Header="Basic" Binding="{Binding BasicSalary, StringFormat={}{0:N0}}" Width="1.2*"/>
                            <DataGridTextColumn Header="OT" Binding="{Binding OvertimePay, StringFormat={}{0:N0}}" Width="1*"/>
                            <DataGridTextColumn Header="Allowance" Binding="{Binding TotalAllowance, StringFormat={}{0:N0}}" Width="1.2*"/>
                            <DataGridTextColumn Header="Bonus" Binding="{Binding TotalBonus, StringFormat={}{0:N0}}" Width="1*"/>
                            <DataGridTextColumn Header="Penalty" Binding="{Binding TotalPenalty, StringFormat={}{0:N0}}" Width="1*"/>
                            <DataGridTextColumn Header="Deduction" Binding="{Binding TotalDeduction, StringFormat={}{0:N0}}" Width="1.2*"/>
                            <DataGridTextColumn Header="Gross" Binding="{Binding Gross, StringFormat={}{0:N0}}" Width="1.2*"/>
                            <DataGridTextColumn Header="Net" Binding="{Binding Net, StringFormat={}{0:N0}}" Width="1.2*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="➕ New" Style="{StaticResource PillButton}" Margin="8,0,0,0"
                                Command="{Binding NewCommand}"/>
                        <Button Content="🗑 Delete" Style="{StaticResource PillButton}" Margin="8,0,0,0"
                                Background="#E85A8D" Foreground="White"
                                Command="{Binding DeleteCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- EDITOR + ADJUSTMENTS -->
            <Border Style="{StaticResource Card}" Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Payroll detail" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>

                        <!-- row 1 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Employee" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <ComboBox Style="{StaticResource DarkCombo}"
                                          ItemsSource="{Binding Employees}"
                                          SelectedItem="{Binding SelectedEmployee}"
                                          DisplayMemberPath="Name"/>
                                <TextBlock Foreground="#8C8FCF" FontSize="12" Margin="0,6,0,0"
                                           Text="{Binding EmpDeptText}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                <TextBlock Text="Year" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <ComboBox Style="{StaticResource DarkCombo}"
                                          ItemsSource="{Binding YearOptions}"
                                          SelectedItem="{Binding EditorYear}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Month" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <ComboBox Style="{StaticResource DarkCombo}"
                                          ItemsSource="{Binding MonthOptions}"
                                          SelectedItem="{Binding EditorMonth}"/>
                            </StackPanel>
                        </Grid>

                        <!-- row 2 -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Basic Salary" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <TextBox Style="{StaticResource DarkTextBox}"
                                         Text="{Binding BasicText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                <TextBlock Text="Overtime Pay" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <TextBox Style="{StaticResource DarkTextBox}"
                                         Text="{Binding OTText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Pay Date" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <DatePicker Style="{StaticResource DarkDatePicker}"
                                            SelectedDate="{Binding PayDate}"/>
                            </StackPanel>
                        </Grid>

                        <!-- row 3 -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Allowance" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <TextBox Style="{StaticResource DarkTextBox}"
                                         Text="{Binding AllowanceText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                <TextBlock Text="Bonus" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <TextBox Style="{StaticResource DarkTextBox}"
                                         Text="{Binding BonusText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="0,0,8,0">
                                <TextBlock Text="Penalty" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <TextBox Style="{StaticResource DarkTextBox}"
                                         Text="{Binding PenaltyText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Deduction" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                                <TextBox Style="{StaticResource DarkTextBox}"
                                         Text="{Binding DeductionText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>

                        <!-- totals preview -->
                        <Border Background="#1E204D" BorderBrush="#3A3D7A" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Gross (computed)" Foreground="#B6B8D6"/>
                                    <TextBlock Foreground="White" FontSize="18" FontWeight="Bold"
                                               Text="{Binding GrossPreview}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Net (computed)" Foreground="#B6B8D6"/>
                                    <TextBlock Foreground="White" FontSize="18" FontWeight="Bold"
                                               Text="{Binding NetPreview}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- actions -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button Content="💾 Save" Style="{StaticResource PillButton}" Background="#6C70D9" Foreground="White" Margin="8,0,0,0"
                                    Command="{Binding SaveCommand}"/>
                            <Button Content="↺ Cancel" Style="{StaticResource PillButton}" Margin="8,0,0,0"
                                    Command="{Binding NewCommand}"/>
                        </StackPanel>

                        <!-- adjustments -->
                        <TextBlock Text="Adjustments" Foreground="White" FontWeight="SemiBold" Margin="0,16,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0" Style="{StaticResource DarkCombo}" Margin="0,0,8,0"
                                      SelectedValuePath="Content" SelectedValue="{Binding SelectedAdjType}">
                                <ComboBoxItem Content="ALLOWANCE"/>
                                <ComboBoxItem Content="BONUS"/>
                                <ComboBoxItem Content="PENALTY"/>
                                <ComboBoxItem Content="DEDUCTION"/>
                                <ComboBoxItem Content="OVERTIME"/>
                            </ComboBox>

                            <TextBox Grid.Column="1" Style="{StaticResource DarkTextBox}" Margin="0,0,8,0"
                                     Text="{Binding AdjAmountText, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Grid.Column="2" Style="{StaticResource DarkTextBox}" Margin="0,0,8,0"
                                     Text="{Binding AdjDesc, UpdateSourceTrigger=PropertyChanged}"/>

                            <Button Content="➕ Add" Grid.Column="3" Style="{StaticResource PillButton}" Margin="0,0,8,0"
                                    Command="{Binding AddAdjCommand}"/>
                            <Button Content="🗑 Remove" Grid.Column="4" Style="{StaticResource PillButton}" Background="#E85A8D" Foreground="White"
                                    Command="{Binding RemoveAdjCommand}"/>
                        </Grid>

                        <DataGrid Style="{StaticResource GridDark}" AutoGenerateColumns="False" Margin="0,8,0,0" Height="240"
                                  ItemsSource="{Binding Adjustments}"
                                  SelectedItem="{Binding SelectedAdjustment}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Type" Binding="{Binding AdjType}" Width="1.2*"/>
                                <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat={}{0:N0}}" Width="1*"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="1.2*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="🧮 Recalc totals from adjustments"
                                    Style="{StaticResource PillButton}"
                                    Command="{Binding RecalcFromAdjCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>