<Page x:Class="ManagementEmployee.View.Admin.BackupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManagementEmployee.View.Admin"
      mc:Ignorable="d"
        d:DesignWidth="1100" d:DesignHeight="700"
        Title="BackupPage"
        Background="#0F1024" >

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Card tối -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Background" Value="#14163A"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.18" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ô nhập tối -->
        <Style x:Key="DarkBox" TargetType="Control">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Foreground" Value="#EDEBFF"/>
            <Setter Property="BorderBrush" Value="#3A3D7A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style x:Key="DarkTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkBox}">
            <Setter Property="Background" Value="#1E204D"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#EDEBFF"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <!-- Nút tròn -->
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Background" Value="#5fe7c4"/>
            <Setter Property="Foreground" Value="#0F1024"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút viền -->
        <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource PillButton}">
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="BorderBrush" Value="#6C70D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EDEBFF"/>
        </Style>

        <!-- List item lịch sử -->
        <Style x:Key="HistoryItemBorder" TargetType="Border">
            <Setter Property="Background" Value="#1B1E49"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Page.Resources>

    <Grid Background="#0F1024" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <TextBlock Text="🗂 Backup – Restore"
                       Foreground="White" FontSize="18" FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding StatusMessage, TargetNullValue=''}"
                           Foreground="#B6B8D6" VerticalAlignment="Center"/>
            </StackPanel>
        </DockPanel>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Backup -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Backup data"
                               Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                    <TextBlock Text="Chọn thư mục đích và tạo bản sao dữ liệu."
                               Foreground="#8C8FCF" Margin="0,4,0,12"/>

                    <TextBlock Text="Thư mục đích" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                    <DockPanel>
                        <TextBox Text="{Binding BackupDirectory, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource DarkTextBox}" Margin="0,0,8,0"/>
                        <Button Content="Browse"
                                Click="BrowseBackupDirectory_Click"
                                Style="{StaticResource OutlineButton}"/>
                    </DockPanel>

                    <Button Content="Run backup"
                            Command="{Binding BackupCommand}"
                            Style="{StaticResource PillButton}" Background="#6C70D9" Foreground="White"
                            Margin="0,12,0,0"/>
                    <TextBlock Text="Mẹo: nên sao lưu định kỳ và lưu bản sao ở ổ rời / cloud."
                               Foreground="#8C8FCF" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Restore -->
            <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Restore data"
                               Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                    <TextBlock Text="Chọn tệp sao lưu (.json) để phục hồi vào hệ thống."
                               Foreground="#8C8FCF" Margin="0,4,0,12"/>

                    <TextBlock Text="Tệp sao lưu" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                    <DockPanel>
                        <TextBox Text="{Binding RestoreFilePath, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource DarkTextBox}" Margin="0,0,8,0"/>
                        <Button Content="Choose file"
                                Click="BrowseRestoreFile_Click"
                                Style="{StaticResource OutlineButton}"/>
                    </DockPanel>

                    <CheckBox Content="Ghi đè dữ liệu trùng"
                              IsChecked="{Binding OverwriteExisting}"
                              Style="{StaticResource DarkCheckBox}"/>

                    <Button Content="Run restore"
                            Command="{Binding RestoreCommand}"
                            Style="{StaticResource PillButton}" Background="#5fe7c4" Foreground="#0F1024"
                            Margin="0,12,0,0"/>
                    <TextBlock Text="Lưu ý: thao tác này không thể hoàn tác. Đảm bảo tệp hợp lệ."
                               Foreground="#EFB8C8" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- History -->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource Card}" Margin="0,12,0,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Lịch sử thao tác"
                               Grid.Row="0" Margin="16,16,16,8"
                               Foreground="White" FontWeight="SemiBold"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding HistoryEntries}" Margin="16,0,16,16">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource HistoryItemBorder}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Action}" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Detail}" Foreground="#C9CBFF" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat={}{0:dd/MM/yyyy HH:mm}}"
                                                       Foreground="#8C8FCF" FontSize="12" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Overlay loading -->
                    <Border Grid.RowSpan="2" Background="#66000000"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                            IsHitTestVisible="{Binding IsLoading}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar Width="220" Height="6" IsIndeterminate="True"/>
                            <TextBlock Text="Đang xử lý..." Foreground="White" Margin="0,12,0,0" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <DockPanel Grid.Row="2">
            <TextBlock Text="{Binding LastBackupAt, StringFormat={}{0:dd/MM/yyyy HH:mm}, TargetNullValue='Chưa có bản backup'}"
                       Foreground="#B6B8D6" DockPanel.Dock="Left"/>
            <TextBlock Text="{Binding LastBackupFile, TargetNullValue=''}"
                       Foreground="#8C8FCF" DockPanel.Dock="Right" TextTrimming="CharacterEllipsis"/>
        </DockPanel>
    </Grid>
</Page>
