<Page x:Class="ManagementEmployee.View.Admin.AttendanceManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="AttendanceManagerPage">

    <Page.Resources>
        <!-- Ô nhập tối -->
        <Style x:Key="DarkBox" TargetType="Control">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Foreground" Value="#EDEBFF"/>
            <Setter Property="BorderBrush" Value="#3A3D7A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style x:Key="DarkTextBox" TargetType="TextBox" BasedOn="{StaticResource DarkBox}">
            <Setter Property="Background" Value="#1E204D"/>
        </Style>

        <Style x:Key="DarkDatePicker" TargetType="DatePicker" BasedOn="{StaticResource DarkBox}">
            <Setter Property="Background" Value="#1E204D"/>
        </Style>

        <!-- ComboBox xám -->
        <Style x:Key="GrayCombo" TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#8A8A8A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <!-- Nút pill -->
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Background" Value="#5fe7c4"/>
            <Setter Property="Foreground" Value="#0F1024"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4ec7a8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid tối -->
        <Style x:Key="NiceGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#14163A"/>
            <Setter Property="Foreground" Value="#EDEBFF"/>
            <Setter Property="BorderBrush" Value="#2A2D5F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#1B1E49"/>
            <Setter Property="AlternatingRowBackground" Value="#20245A"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="RowHeight" Value="34"/>
            <Setter Property="ColumnHeaderHeight" Value="38"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2A2D5F"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#2A2D5F"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>
    </Page.Resources>

    <Grid Background="#0F1024">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="440"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="🕒 Attendance Manager"
                   Foreground="White" FontSize="20" FontWeight="SemiBold"
                   Margin="8,8,8,4"/>

        <!-- Form bên trái -->
        <Border Grid.Row="1" Grid.Column="0" Margin="8" Background="#14163A" CornerRadius="12" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Text="Employee" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                    <ComboBox Style="{StaticResource GrayCombo}"
                              ItemsSource="{Binding Employees}"
                              DisplayMemberPath="FullName"
                              SelectedItem="{Binding SelectedEmployee}"/>

                    <TextBlock Text="Work Date" Foreground="#B6B8D6" Margin="0,10,0,4"/>
                    <DatePicker Style="{StaticResource DarkDatePicker}"
                                SelectedDate="{Binding SelectedWorkDate, Mode=TwoWay}"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Check-in (HH:mm)" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource DarkTextBox}"
                                     Text="{Binding CheckInText, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Check-out (HH:mm)" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource DarkTextBox}"
                                     Text="{Binding CheckOutText, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Work Hours (auto)" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource DarkTextBox}" IsReadOnly="True"
                                     Text="{Binding WorkHoursText}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Overtime Hours" Foreground="#B6B8D6" Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource DarkTextBox}"
                                     Text="{Binding OvertimeText, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Status" Foreground="#B6B8D6" Margin="0,10,0,4"/>
                    <ComboBox Style="{StaticResource GrayCombo}"
                              ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding SelectedStatus}"/>

                    <TextBlock Text="Notes" Foreground="#B6B8D6" Margin="0,10,0,4"/>
                    <TextBox Style="{StaticResource DarkTextBox}" Height="72"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Text="{Binding Notes}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                        <Button Content="➕  New"   Style="{StaticResource PillButton}" Command="{Binding NewCommand}"/>
                        <Button Content="📂  Load"  Style="{StaticResource PillButton}" Background="#6C70D9" Foreground="White" Margin="8,0,0,0" Command="{Binding LoadCommand}"/>
                        <Button Content="💾  Save"  Style="{StaticResource PillButton}" Background="#4ec7a8" Foreground="Black" Margin="8,0,0,0" Command="{Binding SaveCommand}"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Báo cáo bên phải -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#14163A" CornerRadius="12" Padding="12" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Monthly Report" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1" Style="{StaticResource GrayCombo}" Margin="12,0,0,0"
                              ItemsSource="{Binding ReportMonthOptions}"
                              SelectedItem="{Binding SelectedReportMonth}"/>
                    <ComboBox Grid.Column="2" Style="{StaticResource GrayCombo}" Margin="12,0,0,0"
                              ItemsSource="{Binding ReportYearOptions}"
                              SelectedItem="{Binding SelectedReportYear}"/>

                    <Button Grid.Column="3" Content="📊  Generate"
                            Style="{StaticResource PillButton}" Margin="12,0,0,0"
                            Command="{Binding GenerateReportCommand}"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="#14163A" CornerRadius="12" Padding="8">
                <DataGrid AutoGenerateColumns="False" Style="{StaticResource NiceGrid}"
                          ItemsSource="{Binding ReportItems}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="2*"/>
                        <DataGridTextColumn Header="Present"   Binding="{Binding Present}" Width="*" />
                        <DataGridTextColumn Header="Leave"     Binding="{Binding Leave}"   Width="*" />
                        <DataGridTextColumn Header="WFH"       Binding="{Binding WFH}"     Width="*" />
                        <DataGridTextColumn Header="Absent"    Binding="{Binding Absent}"  Width="*" />
                        <DataGridTextColumn Header="Work Hours"     Binding="{Binding WorkHours, StringFormat={}{0:N2}}" Width="1.2*"/>
                        <DataGridTextColumn Header="Overtime Hours" Binding="{Binding OvertimeHours, StringFormat={}{0:N2}}" Width="1.2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <!-- Footer hint -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                   Text="Tip: nhập giờ theo định dạng HH:mm (ví dụ 08:30)."
                   Foreground="#B6B8D6" FontSize="12" Margin="8,0,8,8"/>
    </Grid>
</Page>
