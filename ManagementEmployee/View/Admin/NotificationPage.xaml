<Page x:Class="ManagementEmployee.View.Admin.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Page.Resources>
        <!-- Card -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12 8"/>
            <Setter Property="Margin" Value="8 0 0 0"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OutlinedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12 8"/>
            <Setter Property="Margin" Value="8 0 0 0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Foreground" Value="#2563EB"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Labels -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,12,0,4"/>
        </Style>

        <!-- Bool -> Visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header (tone gần AdminWindow) -->
        <Border Grid.Row="0" Background="#1E3A8A" CornerRadius="0 0 32 32" Padding="28 32" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Thông báo nội bộ" FontSize="30" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="Gửi cập nhật nhanh tới toàn bộ nhân viên hoặc từng phòng ban."
                               Margin="0,6,0,0" Foreground="#BFDBFE"/>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Border Background="#2563EB" CornerRadius="12" Padding="16" Margin="0,0,16,0">
                            <StackPanel>
                                <TextBlock Text="Thông báo chưa đọc" Foreground="#C7D2FE" FontWeight="SemiBold" FontSize="12"/>
                                <TextBlock Text="{Binding UnreadCount}" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#0F172A" CornerRadius="12" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Người dùng hiện tại" Foreground="#94A3B8" FontWeight="SemiBold" FontSize="12"/>
                                <TextBlock Text="{Binding CurrentUserDisplayName}" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                    <Button Content="Tải lại" Command="{Binding RefreshNotificationsCommand}" Style="{StaticResource OutlinedButtonStyle}"/>
                    <Button Content="Đánh dấu tất cả đã đọc" Command="{Binding MarkAllAsReadCommand}" Style="{StaticResource OutlinedButtonStyle}" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Form -->
            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Soạn thông báo mới" FontSize="20" FontWeight="SemiBold" Foreground="#1F2937"/>
                        <TextBlock Text="Chọn đối tượng nhận và nội dung cần truyền tải." Foreground="#6B7280" Margin="0,4,0,12"/>

                        <TextBlock Text="Tiêu đề" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}" Height="36"/>

                        <TextBlock Text="Nội dung" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding NewContent}" AcceptsReturn="True" TextWrapping="Wrap" Height="140"/>

                        <TextBlock Text="Đối tượng nhận" Style="{StaticResource FormLabel}"/>
                        <StackPanel>
                            <RadioButton Content="Tất cả nhân viên" GroupName="Recipient" IsChecked="{Binding IsRecipientAll, Mode=TwoWay}"/>
                            <RadioButton Content="Theo phòng ban" GroupName="Recipient" IsChecked="{Binding IsRecipientDepartment, Mode=TwoWay}"/>
                            <RadioButton Content="Theo cá nhân" GroupName="Recipient" IsChecked="{Binding IsRecipientUser, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecipientDepartment}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Chọn phòng ban" Style="{StaticResource FormLabel}" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding Departments}"
                                      SelectedValuePath="DepartmentId"
                                      DisplayMemberPath="DepartmentName"
                                      SelectedValue="{Binding SelectedDepartmentId}"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecipientUser}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Chọn nhân viên" Style="{StaticResource FormLabel}" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding Users}"
                                      SelectedValuePath="UserId"
                                      DisplayMemberPath="FullName"
                                      SelectedValue="{Binding SelectedUserId}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                            <Button Content="Xóa nội dung" Command="{Binding ClearFormCommand}" Style="{StaticResource OutlinedButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="Gửi thông báo" Command="{Binding SendNotificationCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- List -->
            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Danh sách thông báo" FontSize="20" FontWeight="SemiBold" Foreground="#1F2937"/>
                            <TextBlock Text="Các thông báo mới nhất hiển thị ở đầu danh sách." Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button Content="Làm mới" Command="{Binding RefreshNotificationsCommand}" Style="{StaticResource OutlinedButtonStyle}" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <ListView Grid.Row="1" Margin="0,16,0,0" ItemsSource="{Binding Notifications}" Background="Transparent" BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0,0,0,12"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" Padding="16">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                    <Setter Property="Background" Value="#FFFFF0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" Foreground="Black">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                                <Setter Property="Foreground" Value="DarkBlue"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Foreground="#4B5563" Margin="0,6,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                                <TextBlock Text="{Binding SenderName, StringFormat=Từ: {0}}" Margin="0,0,16,0" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding DepartmentName, StringFormat=Phòng ban: {0}}" Margin="0,0,16,0" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Margin="0,0,16,0" Foreground="#6B7280"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1"
            Orientation="Horizontal"
            VerticalAlignment="Center">
                                            <Button Content="Đã đọc"
            Command="{Binding DataContext.MarkAsReadCommand, RelativeSource={RelativeSource AncestorType=Page}}"
            CommandParameter="{Binding NotificationId}"
            Style="{StaticResource OutlinedButtonStyle}" />
                                            <Button Content="Xóa"
            Command="{Binding DataContext.DeleteNotificationCommand, RelativeSource={RelativeSource AncestorType=Page}}"
            CommandParameter="{Binding NotificationId}"
            Style="{StaticResource OutlinedButtonStyle}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock Grid.Row="1" Text="Chưa có thông báo nào." Foreground="#6B7280" FontStyle="Italic"
                               HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Notifications.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>

        <!-- Status -->
        <StatusBar Grid.Row="2" Background="#FFFFFF" Padding="24 12">
            <StatusBarItem>
                <TextBlock Text="{Binding Notifications.Count, StringFormat=Tổng: {0} thông báo}"
                           FontWeight="SemiBold" Foreground="#1F2937"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding UnreadCount, StringFormat=Chưa đọc: {0}}"
                           Foreground="#2563EB" FontWeight="SemiBold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
